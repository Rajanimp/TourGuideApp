<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--App Bar Style-->
    <style name="MyAppBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>

    <!--Style for a tab that displays a relevant attraction-->
    <style name="PlacesTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/PlacesTabTextAppearance</item>
    </style>

    <!--Text appearance for a tab -->
    <style name="PlacesTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_text_color</item>
    </style>

    <style name="MyTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingStart">@dimen/margin_small</item>
        <item name="android:paddingEnd">@dimen/margin_small</item>
    </style>
</resources>
